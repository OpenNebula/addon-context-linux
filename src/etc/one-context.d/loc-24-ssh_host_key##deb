if [ ! -f /etc/ssh/ssh_host_rsa_key ]; then
    if ssh-keygen -A; then
        if type restorecon >/dev/null 2>&1; then
            restorecon -R -v /etc/ssh/
        fi
    else
        DEBIAN_FRONTEND=noninteractive dpkg-reconfigure openssh-server
    fi
fi
